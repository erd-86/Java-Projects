package mod1;

public class ItemToPurchase {
	private String itemName;
	private int itemPrice;
	private int itemQuantity;

	public ItemToPurchase() {
		itemName = "none";
		itemPrice = 0;
		itemQuantity = 0;
	}

	// public member methods (mutators & accessors)
	// setName() & getName()
	public void setName(String itemName) {
		this.itemName = itemName;
	}

	public String getName() {
		return itemName;
	}

	// setPrice() & getPrice()
	public void setPrice(int setPrice) {
		this.itemPrice = setPrice;
	}

	public int getPrice() {
		return itemPrice;
	}

	// setQuantity() & getQuantity()
	public void setQuantity(int setQuantity) {
		this.itemQuantity = setQuantity;
	}

	public int getQuantity() {
		return itemQuantity;
	}
	// print item to purchase

	public void printItemPurchase() {
		System.out.println(itemQuantity + " " + itemName + " $" + itemPrice + " = $" + (itemPrice * itemQuantity));
	}
}
